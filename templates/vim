hi Character gui=bold guifg=#${col14} cterm=bold ctermfg=$ccol14

hi Type gui=none,bold guifg=#${col6} term=none cterm=none,bold ctermfg=$ccol6
hi Boolean guifg=#${col6} ctermfg=$ccol6
