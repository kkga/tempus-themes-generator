@import "colors";

// This defines all syntax variables that syntax themes must implement when they
// include a syntax-variables.less file.

// General colors
@syntax-background: @colbg;
@syntax-background-alt: @colbgalt;
@syntax-foreground: @colfg;
@syntax-foreground-alt: @colfgalt;
@syntax-cursor-background: @colcr;
@syntax-cursor-foreground: @colcr2;
@syntax-selection-background: @colfg;
@syntax-selection-foreground: @colbg;

// Guide colors
@syntax-wrap-guide-foreground: @colfgalt;
@syntax-indent-guide-foreground: @colfgalt;
@syntax-invisible-character-foreground: @colfgalt;

// For find and replace markers
@syntax-result-marker-background: @col2;
@syntax-result-marker-foreground: @colbg;
@syntax-result-marker-selected-background: @colfg;
@syntax-result-marker-selected-foreground: @colbg;

// Gutter colors
@syntax-gutter-background: @colbgalt;
@syntax-gutter-foreground: @colfgalt;
@syntax-gutter-selected-background: @colfgalt;
@syntax-gutter-selected-foreground: @colbgalt;

// For git diff info. i.e. in the gutter
@syntax-color-renamed: @col4;
@syntax-color-added: @col2;
@syntax-color-modified: @col3;
@syntax-color-removed: @col1;
